{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "es2022", "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@tst/*": ["tst/*"],
      "@functions/*": ["src/functions/*"],
      "@helpers/*": ["src/helpers/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    "./dist/**/*"
  ]
}
